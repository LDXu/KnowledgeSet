<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sokasyn.develop.learning.testintent.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="到第二个界面"
        android:id="@+id/btnToSnd"
        android:onClick="btnToSndClicked"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnThird"
        android:layout_alignStart="@+id/btnThird" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="到第三个界面"
        android:id="@+id/btnThird"
        android:onClick="btnToThirdClicked"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/btnToSnd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="到第四个界面"
        android:id="@+id/btnForth"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过监听,动态绑定按钮点击事件"
        android:id="@+id/textView"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/btnThird"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:inputType="text"
        android:hint="input value"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnThird"
        android:layout_alignStart="@+id/btnThird"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="传递的参数:"
        android:textAlignment="center"
        android:id="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />


</RelativeLayout>
