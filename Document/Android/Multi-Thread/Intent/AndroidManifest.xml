<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sokasyn.develop.learning.testintent">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 第二个界面 -->
        <activity
            android:name=".SecondActivity"
            android:label="Second Acitity">
            <intent-filter>
                <action android:name="com.sokasyn.develop.learning.testintent.SecondActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 第三个界面 -->
        <activity
            android:name=".ThirdActivity"
            android:label="Third Acitity">
            <intent-filter>
                <action android:name="com.sokasyn.develop.learning.testintent.ThirdActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ForthActivity"
            android:label="Forth Activity" >
            <intent-filter>
                <action android:name="com.sokasyn.develop.learning.testintent.ForthActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>


    </application>

</manifest>